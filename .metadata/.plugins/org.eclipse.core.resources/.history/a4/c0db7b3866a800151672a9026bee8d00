package com.example.plane;

import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics;
import java.awt.Image;
import java.awt.event.KeyAdapter;
import java.awt.event.KeyEvent;
import java.util.ArrayList;
import java.util.List;

import com.example.constant.Constant;
import com.example.util.MyFrame;
import com.example.util.ResourceUtil;

public class PlaneGameFrame extends MyFrame {

	private static final long serialVersionUID = 391225611844072051L;
	private int maxBullet = 50;
	private Image bground = ResourceUtil.getImage("");
	private Plane plane = new Plane("", 200, 200);
	private List<Bullet> list = new ArrayList<Bullet>();

	@Override
	public void launchFrame() {

		// parent function
		super.launchFrame();

		for (int i = 0; i <= maxBullet; i++) {
			Bullet bullet = new Bullet();
			this.list.add(bullet);
		}
		// add key listecer
		addKeyListener(new KeyMonitor());
	}

	public void paint(Graphics g) {

		if (bground != null) {
			g.drawImage(bground, 0, 0, null);
		} else {
			setBackground(Color.white);
		}
		if( plane.isLive()){
			plane.draw(g);
		}

		for (Bullet b : list) {
			b.draw(g);

			boolean boo = b.getRect().intersects(plane.getRect());
			if(boo){
				plane.setLive(false);
			}
		}
		
		if(!plane.isLive()){
			Font f = new Font("宋体", Font.BOLD, 16);
			g.setFont(f);
			g.drawString("GAME OVER", Constant.GAME_WIDTH / 2 - 44, Constant.GAME_HEIGHT / 2);
		}

	}
	
	private void privtInfo(Graphics g,String info,int size){
		Font f = new Font("宋体", Font.BOLD, size);
		g.setFont(f);
		g.drawString(info, Constant.GAME_WIDTH / 2 - 44, Constant.GAME_HEIGHT / 2);
	}
	
	/**
	 * 使用内部类可以方便的使用外部类的方法
	 * 
	 * @author 北飞的候鸟
	 *
	 */
	class KeyMonitor extends KeyAdapter {

		@Override
		public void keyPressed(KeyEvent e) {

			plane.addDirection(e);
		}

		@Override
		public void keyReleased(KeyEvent e) {

			plane.removeDirection(e);
		}

	}

	public static void main(String[] args) {
		PlaneGameFrame frame = new PlaneGameFrame();
		frame.launchFrame();
	}
}
