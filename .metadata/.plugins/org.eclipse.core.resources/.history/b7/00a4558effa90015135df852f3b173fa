package com.example.testmap;

import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;
import java.util.Set;

public class Test {

	public static void main(String[] args) {
		String str = "this is a number of this numbers";
		String[] strs = str.split(" ");
		for(String  s: strs ){
			System.out.print(s + ",");
		}
		System.out.println();
		Map<String,Letter> letters = new HashMap<String, Letter>();
		for(String temp : strs){
			if( !letters.containsKey(temp) ){
				System.out.print("1");
				letters.put(temp,new Letter());
			}
		}
		System.out.println();
		System.out.println(letters.size());
		for(String temp : strs){
			Letter col = letters.get(temp);
			col.setName(temp);
			col.setCount(col.getCount() + 1);
		}
		
		Set<Map.Entry<String, Letter>> set = letters.entrySet();
		Iterator<Map.Entry<String, Letter>> it = set.iterator();
		while(it.hasNext()){
			System.out.print(it.next().getValue().getName() + " + ");
			System.out.println(it.next().getValue().getCount());
		}
		
	}
}
