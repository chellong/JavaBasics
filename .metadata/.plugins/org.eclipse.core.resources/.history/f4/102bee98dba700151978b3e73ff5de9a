package com.example.solar;

import java.awt.Graphics;
import java.awt.Image;

import com.example.util.ResourceUtil;

/**
 * 1、行星
 * 		图片，坐标，行星沿着某个椭圆运行，长轴，短轴，速度
 * 		绕着某个恒星飞行
 * 
 * @author 北飞的候鸟
 *
 */
public class Planet extends Star {
	
	protected double longAxis;//长轴
	protected double shortAxis;//短轴
	protected double speed;
	protected double degree;	
	protected Star center;

	public Planet(Star center,String imgPath,double longAxis,double shortAxis, double speed) {
		
		this.x = center.x + longAxis;
		this.y = center.y;
		this.longAxis = longAxis;
		this.shortAxis = shortAxis;
		this.img = ResourceUtil.getImage(imgPath);
		this.speed = speed;
		this.center = center;
		
		this.width = img.getWidth(null);
		this.height = img.getHeight(null);
	}

	public Planet(Image img, double x, double y) {
		super(img, x, y);
	}
	
	public Planet(String imgPath, double x, double y) {
		super(imgPath, x, y);
	}
	
	

	@Override
	public void draw(Graphics g) {
		
		g.drawImage(img, (int)x,(int)y,null);
		
		x = center.x + longAxis * Math.cos(degree); 
		y = center.y + shortAxis * Math.cos(degree); 
		
		degree += speed;
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
}
